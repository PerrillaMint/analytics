<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E6">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF8C00"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Data Insights"
        app:titleTextColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#FF8C00"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- No Data Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/no_data_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š"
                android:textSize="48sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Data Yet"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#D2691E"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start brewing recipes to see insights and analytics!"
                android:textSize="14sp"
                android:textColor="#8B4513"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/insights_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Overall Statistics Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OVERALL STATISTICS"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D2691E"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Total Recipes -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Recipes"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_total_recipes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#D2691E" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- Completed Brews -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Completed Brews"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_completed_brews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- Success Rate -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Success Rate"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_success_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FF9100" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- Average Fermentation Time -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Avg. Fermentation Time"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_avg_ferment_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#D2691E" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Recipe Status Distribution -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECIPE STATUS DISTRIBUTION"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D2691E"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/status_pie_chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="16dp" />

            </androidx.cardview.widget.CardView>

            <!-- Temperature Statistics Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEMPERATURE STATISTICS"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D2691E"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Average Temperature -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Average Temperature"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_avg_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#D2691E" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- Optimal Temperature Range -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Optimal Range (Completed)"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_optimal_temp_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- Temperature Alerts -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Critical Temps Detected"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_temp_alerts_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#D32F2F" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- pH Statistics Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pH STATISTICS"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D2691E"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Average pH at Harvest -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Avg. pH at Harvest"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_avg_ph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#D2691E" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- Optimal pH Range -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Optimal pH Range"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_optimal_ph_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.5 - 3.5"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- Average Time to Optimal pH -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Avg. Time to Optimal pH"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_avg_time_to_optimal_ph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#D2691E" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Recipe Patterns Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RECIPE PATTERNS"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D2691E"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Most Used Tea -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Most Used Tea"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_most_used_tea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#D2691E" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE4B5"
                        android:layout_marginBottom="12dp" />

                    <!-- Most Successful Recipe -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Most Successful Recipe"
                            android:textSize="14sp"
                            android:textColor="#8B4513" />

                        <TextView
                            android:id="@+id/tv_most_successful_recipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tea Types Distribution -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEA TYPES DISTRIBUTION"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D2691E"
                android:layout_marginBottom="8dp"
                android:letterSpacing="0.1" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/tea_types_bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="16dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
