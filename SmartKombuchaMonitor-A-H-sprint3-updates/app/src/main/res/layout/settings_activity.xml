<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFF5E6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FF8C00"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetStartWithNavigation="0dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start|center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Navigate back"
                android:padding="12dp"
                android:src="@android:drawable/ic_menu_revert" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Settings"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SECTION: Account -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACCOUNT"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:textSize="12sp"
                android:textColor="#D2691E"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/card_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txt_account_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change User Information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#8B4513" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CD853F"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Username -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="14sp"
                    android:textColor="#8B4513" />

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp"
                    android:hint="Enter username"
                    android:inputType="textPersonName"
                    android:autofillHints="username"
                    android:importantForAutofill="yes"
                    android:textColor="#8B4513"
                    android:textColorHint="#CD853F"
                    android:backgroundTint="#FF8C00"
                    tools:ignore="HardcodedText" />

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="14sp"
                    android:textColor="#8B4513"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp"
                    android:hint="name@example.com"
                    android:inputType="textEmailAddress"
                    android:autofillHints="emailAddress"
                    android:importantForAutofill="yes"
                    android:textColor="#8B4513"
                    android:textColorHint="#CD853F"
                    android:backgroundTint="#FF8C00"
                    tools:ignore="HardcodedText" />

                <!-- Password -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Password"
                    android:textSize="14sp"
                    android:textColor="#8B4513"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp"
                    android:hint="Enter new password"
                    android:inputType="textPassword"
                    android:autofillHints="password"
                    android:importantForAutofill="yes"
                    android:textColor="#8B4513"
                    android:textColorHint="#CD853F"
                    android:backgroundTint="#FF8C00"
                    tools:ignore="HardcodedText" />

                <CheckBox
                    android:id="@+id/cb_show_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show password"
                    android:textColor="#8B4513"
                    android:layout_marginTop="6dp" />

                <Button
                    android:id="@+id/btn_save_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#FF8C00"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- SECTION: Units -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UNITS"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:textSize="12sp"
                android:textColor="#D2691E"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txt_units_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperature Unit"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#8B4513" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CD853F"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp">

                    <RadioGroup
                        android:id="@+id/group_units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/opt_celsius"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Celsius (°C)"
                            android:textColor="#8B4513"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/opt_fahrenheit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fahrenheit (°F)"
                            android:textColor="#8B4513"
                            android:layout_marginStart="24dp"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
